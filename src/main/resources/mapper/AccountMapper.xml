<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.sample.mapper.AccountMapper">

    <!-- 指定したユーザーIDに対応する Account を取得 -->
    <select id="findByUserId" resultType="com.example.sample.entity.Account">
        SELECT
            id,
            user_id AS userId,
            password,
            user_name AS userName,
            role
        FROM
            account
        WHERE
            user_id = #{userId}
    </select>

</mapper>
